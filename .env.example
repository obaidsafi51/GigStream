# ===========================================
# GigStream Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -------------------------------------------
# Arc Blockchain Configuration
# -------------------------------------------
ARC_RPC_URL=https://arc-testnet.rpc.circle.com
ARC_CHAIN_ID=613
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here

# Smart Contract Addresses (fill after deployment)
CONTRACT_PAYMENT_STREAMING=
CONTRACT_REPUTATION_LEDGER=
CONTRACT_MICRO_LOAN=

# -------------------------------------------
# Circle Developer APIs
# -------------------------------------------
CIRCLE_API_KEY=your_circle_api_key_here
CIRCLE_ENTITY_SECRET=your_circle_entity_secret_here
CIRCLE_BASE_URL=https://api-sandbox.circle.com

# -------------------------------------------
# Database Configuration
# -------------------------------------------
DATABASE_URL=postgresql://username:password@localhost:5432/gigstream_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Optional: Redis for caching
REDIS_URL=redis://localhost:6379

# -------------------------------------------
# Backend API Configuration
# -------------------------------------------
API_PORT=3001
API_BASE_URL=http://localhost:3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRY=24h

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# -------------------------------------------
# Frontend Configuration
# -------------------------------------------
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
NEXT_PUBLIC_ARC_EXPLORER_URL=https://explorer.circle.com/arc-testnet
NEXT_PUBLIC_APP_NAME=GigStream
NEXT_PUBLIC_APP_VERSION=1.0.0

# -------------------------------------------
# Cloudflare (for production deployment)
# -------------------------------------------
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# -------------------------------------------
# Monitoring & Analytics (Optional)
# -------------------------------------------
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# -------------------------------------------
# Email & Notifications (Optional - for future)
# -------------------------------------------
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# -------------------------------------------
# Development Tools
# -------------------------------------------
LOG_LEVEL=debug
ENABLE_DEBUG=true
